<Window x:Class="Liveticker_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Liveticker" Width="525" Height="350" FontSize="16" WindowStartupLocation="CenterScreen" MinWidth="525" MinHeight="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="36" />
        </Grid.RowDefinitions>
        
        <ComboBox Name="EventBox"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="338" SelectionChanged="EventBox_SelectionChanged" IsEditable="True" Loaded="EventBox_Loaded"/>
        <Button Name="AddEvent"  Content="+" HorizontalAlignment="Left" Margin="339,1,0,0" VerticalAlignment="Top" Width="25" Click="AddEvent_Click"/>
        
        <ListView  Margin="0,27,0,0" VerticalAlignment="Top" >
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="Refresh" Padding="6,6" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="btnRefresh_Click" Grid.Row="1" />
        <Button Content="TICK VERFASSEN  >" Padding="6,6" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="btnTicketVerfassen_Click" Grid.Row="1" />
    </Grid>
</Window>